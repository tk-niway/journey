{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.build.json && npm run gen-openapi",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "gen:openapi": "tsx scripts/run.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:gen": "drizzle-kit push && npm run db:generate",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "lint:check": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "type:check": "tsc --noEmit",
    "check:all": "npm run format:check && npm run lint:check && npm run type:check"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "better-sqlite3": "^12.5.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "nanoid": "^5.1.6",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "js-yaml": "^4.1.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.16"
  }
}
