{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@consts/*": ["./src/lib/consts/*"],
      "@db/*": ["./src/db/*"],
      "@domains/*": ["./src/domains/*"],
      "@api/*": ["./src/api/*"],
      "@applications/*": ["./src/applications/*"]
    }
  },
  "exclude": ["node_modules"]
}
